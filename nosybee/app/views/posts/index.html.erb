<h1>Listing Posts</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Post</th>
    <th colspan="2"></th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to '<button type="button">Show</button>'.html_safe, post_path(post)%></td>
      <td><%= link_to '<button type="button">Edit</button>'.html_safe, edit_post_path(post) %></td>
      <td><%= link_to '<button type="button">Delete</button>'.html_safe, post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<br>
<%= link_to '<button type="button">Write a new post</button>'.html_safe, new_post_path %>